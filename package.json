{
  "name": "ks-killer",
  "description": "Kill your Switches with ease",
  "author": "Sixian Li",
  "version": "0.1.0",
  "license": "MIT",
  "publishConfig": {
    "registry": "https://registry.yarnpkg.com"
  },
  "bin": {
    "ks-killer": "./bin/index.js"
  },
  "scripts": {
    "start": "yarn build && node ./lib/cli.js --help",
    "dev": "tsc --watch",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "build": "tsc",
    "clean": "rimraf lib",
    "prepublishOnly": "yarn clean && yarn build",
    "lint": "eslint src"
  },
  "simple-git-hooks": {
    "pre-commit": "yarn lint-staged"
  },
  "lint-staged": {
    "*.{json,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-typescript": "^7.15.0",
    "@types/eslint": "^8.4.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.10.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.15.0",
    "babel-jest": "^27.2.5",
    "eslint": "^8.11.0",
    "jest": "^27.2.5",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.13",
    "prettier": "^2.6.0",
    "rimraf": "^3.0.2",
    "simple-git-hooks": "^2.7.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.4.3"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "ts-morph": "^12.0.0",
    "uuid": "^8.3.2",
    "yargs": "^17.2.1"
  }
}
